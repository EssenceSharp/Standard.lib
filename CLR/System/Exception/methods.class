	"Class methods of System.Exception"
	
	protocol: #accessing method:
	
	[## systemExceptionType
	
		^self instanceType
	];
	
	protocol: #'instance creation' method: 
	
	[## messageText: aString
	
		<invokeMethod: new>
	];
	
	protocol: #'instance creation' method: 
	
	[## messageText: aString innerException: innerException
	
		<invokeMethod: new>
	];
		
	protocol: #'instance creation' method: 
	
	[## serializationInfo: serializationInfo streamingContext: streamingContext
	
		<invokeMethod: new>
	];
	
	protocol: #querying method: 
	
	[## handles: anException
	
		^anException satisfiesHandlingConstraint: self
	];
	
	protocol: #signalling method: 
	
	[## signal
	
		^self new signal
	];
	
	protocol: #signalling method: 
	
	[## signal: aString
	
		^(self messageText: aString) signal
	]
